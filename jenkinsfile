pipeline {
    agent any

    stages {
        stage('Clone GitHub Repo') {
            steps {
                git branch: 'master', url: 'https://github.com/Pythontp/toucan_analytics.git'
            }
        }
        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('sonarqube-8.9') {
                    sh 'mvn sonar:sonar'
                }
            }
        }
        stage('Run Migrations') {
            steps {
                sh 'python3 manage.py migrate'
            }
        }
        stage('Run Django Server') {
            steps {
                sh '/usr/bin/python3 manage.py runserver 0.0.0.0:8000'
            }
        }
        stage('Run Streamlit Server') {
            steps {
                sh '/usr/bin/streamlit run analytics.py runserver 0.0.0.0:8000'
            }
        }
        
        
        stage('Deploy') {
            steps {
                sh 'gunicorn toucan_analytics.wsgi:application --bind 0.0.0.0:8000 --daemon' 
                
                sh '''
                    echo "[Unit]
                    Description=toucan_analytics Gunicorn Service
                    After=network.target

                    [Service]
                    User=ubuntu
                    WorkingDirectory=/home/ubuntu/toucan_analytics
                    ExecStart=/home/ubuntu/bin/gunicorn toucan_analytics.wsgi:application --bind 0.0.0.0:8000
                    Restart=always

                    [Install]
                    WantedBy=multi-user.target" | sudo tee /etc/systemd/system/toucan_analytics.service
                
                
                sh 'sudo systemctl daemon-reload' // Reload systemd configuration
                sh 'sudo systemctl enable toucan_analytics.service' 
                sh 'sudo systemctl start toucan_analytics.service' 
            }
        }
    }
}
          stage('Health Check') {
            steps {
                sh './toucan_analytics/shellscript'
            }
        }
    
 